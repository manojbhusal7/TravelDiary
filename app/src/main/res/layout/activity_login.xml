<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_background"
    tools:context=".View.Auth.LoginActivity"
    android:orientation="vertical"
    android:visibility="visible">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <ImageView
        android:id="@+id/logo"
        android:layout_width="363dp"
        android:layout_height="230dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/app_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvintro1"
        android:layout_width="363dp"
        android:layout_height="56dp"
        android:fontFamily="@font/lexend"
        android:text="Hello Again!"
        android:textAlignment="center"
        android:textColor="#FF464646"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo" />

    <TextView
        android:id="@+id/tvintro2"
        android:layout_width="299dp"
        android:layout_height="53dp"
        android:fontFamily="@font/lexend"
        android:text="Welcome back you've been missed"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvintro1" />

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="306dp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:alpha=".60"
        android:background="@drawable/rounded_corner"
        android:fontFamily="@font/cambo"
        android:hint="Enter Email"
        android:paddingLeft="20dp"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvintro2" />
    <EditText
        android:id="@+id/etPass"
        android:layout_width="306dp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:alpha=".60"
        android:background="@drawable/rounded_corner"
        android:fontFamily="@font/cambo"
        android:hint="Enter Password"
        android:paddingLeft="20dp"
        android:textSize="20sp"
        android:inputType="textPassword"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etEmail" />


    <Button
        android:id="@+id/btnlogin"
        android:layout_width="306dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_corner_button"
        android:fontFamily="@font/lexend_deca"
        android:text="Login"
        android:textColor="@color/white"
        android:textSize="20dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.547"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etPass" />

    <TextView
        android:id="@+id/forget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lexend_deca"
        android:gravity="center"
        android:text="Forget Password"
        android:textSize="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="170dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnlogin" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/forget"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >


        <TextView
            android:id="@+id/register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/lexend"
            android:text="Not a member?"
            android:textSize="15dp"



            />

        <TextView
            android:id="@+id/tvRegisternow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/lexend"
            android:text="Register Now"
            android:textColor="@color/color_primary"
            android:textSize="15dp"
            android:layout_marginStart="5dp"


            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>