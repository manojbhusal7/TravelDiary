<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    android:background="@drawable/home_background"
    tools:context=".View.Auth.RegistrationActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/logo"
            android:layout_width="363dp"
            android:layout_height="230dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/app_logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvintro1"
            android:layout_width="363dp"
            android:layout_height="56dp"
            android:fontFamily="@font/lexend"
            android:text="Let's Get Started!"
            android:textAlignment="center"
            android:textColor="#FF464646"
            android:textSize="40sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/logo" />

        <TextView
            android:id="@+id/tvintro2"
            android:layout_width="299dp"
            android:layout_height="53dp"
            android:fontFamily="@font/lexend"
            android:text="Create an account to get all features"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvintro1" />

        <EditText
            android:id="@+id/etName"
            android:layout_width="306dp"
            android:layout_height="50dp"
            android:layout_marginTop="12dp"
            android:alpha=".60"
            android:background="@drawable/rounded_corner"
            android:fontFamily="@font/cambo"
            android:hint="Enter Full Name"
            android:paddingLeft="20dp"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvintro2" />

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="306dp"
            android:layout_height="50dp"
            android:layout_marginTop="12dp"
            android:alpha=".60"
            android:background="@drawable/rounded_corner"
            android:fontFamily="@font/cambo"
            android:hint="Enter Your Email"
            android:paddingLeft="20dp"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etName" />

        <EditText
            android:id="@+id/etPass"
            android:layout_width="306dp"
            android:layout_height="50dp"
            android:layout_marginTop="12dp"
            android:alpha=".60"
            android:background="@drawable/rounded_corner"
            android:fontFamily="@font/cambo"
            android:hint="Password"
            android:paddingLeft="20dp"
            android:textSize="20sp"
            android:inputType="textPassword"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etEmail" />

        <EditText
            android:id="@+id/etCpass"
            android:layout_width="306dp"
            android:layout_height="50dp"
            android:layout_marginTop="12dp"
            android:alpha=".60"
            android:background="@drawable/rounded_corner"
            android:fontFamily="@font/cambo"
            android:hint="Confirm Password"
            android:inputType="textPassword"

            android:paddingLeft="20dp"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etPass" />


        <Button
            android:id="@+id/btRegister"
            android:layout_width="306dp"
            android:layout_height="50dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="@color/color_primary"
            android:fontFamily="@font/montserrat_semibold"
            android:text="Create"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="23sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.504"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etCpass" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="46dp"
            android:text="Already have an account?"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@id/btRegister"
            app:layout_constraintTop_toBottomOf="@id/btRegister" />

        <TextView
            android:id="@+id/tvLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text=" Login"
            android:textColor="#1DA8C9"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@id/btRegister"
            app:layout_constraintTop_toBottomOf="@id/btRegister" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
