<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Auth.SplashActivity"
    android:layout_gravity="center"
    android:background="@drawable/home_background">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/splashscreenimage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/splashscreen"
        app:shapeAppearanceOverlay="@style/rounded_splashscreen"
        app:strokeColor="#2db0d7"
        app:strokeWidth="5dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-88dp" />

    <TextView
        android:id="@+id/tvintro1"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:fontFamily="@font/lexend"
        android:text="Let's Explore The Beautiful World"
        android:textColor="#FF464646"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/splashscreenimage" />

    <TextView
        android:id="@+id/tvintro2"
        android:layout_width="350dp"
        android:layout_height="53dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/lexend"
        android:text="Start Creating unforgettable memories Now."
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvintro1" />


</androidx.constraintlayout.widget.ConstraintLayout>